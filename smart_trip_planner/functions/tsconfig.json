{
  "compilerOptions": {
    "target": "ES2015",                     // ✅ Fix 1: ECMAScript target
    "module": "commonjs",
    "lib": ["es2015"],
    "outDir": "lib",
    "rootDir": "src",
    "esModuleInterop": true,                // ✅ Fix 2: allow default imports
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
